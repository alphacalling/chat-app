{
  "compilerOptions": {
    /* Environment */
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],

    /* Module system */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Emit */
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    /* Interop (important for Prisma / commonjs deps) */
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
